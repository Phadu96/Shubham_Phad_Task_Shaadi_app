<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShaadiBandhanApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Backgrounds -->
        <item name="colorSurface">@color/background_light</item>
        <item name="backgroundColor">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:navigationBarColor" >?attr/colorPrimary</item>
    </style>

    <style name="Theme.ShaadiBandhanApp" parent="Base.Theme.ShaadiBandhanApp" />

</resources>